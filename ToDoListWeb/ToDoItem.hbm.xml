<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = “ToDoItem” table = “ToDoItem”>
      
      <meta attribute = "class-description">
         This class contains ToDo items on the ToDoList
      </meta>
      
      <id name = “mID type = "int" column = “itemID”>
         <generator class="native"/>
      </id>
      
      <property name = “mItemName column = “itemName” type = "string"/>
      <property name = “mItemDateTime column = “itemDateTime” type = "string"/>
      
   </class>
</hibernate-mapping>